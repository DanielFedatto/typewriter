<% content_for :sub_navbar do %>
  <div class="actions">
    <%= link_to 'Novo artigo', new_article_path, class: 'button -outline' %>
  </div>
<% end %>


<div class="page-list">
  <h1>Artigos</h1>

  <div class="list-articles">
    <% @articles.each do |article| %>
      <%= link_to edit_article_path(article), class: 'item' do %>
        <div class="content">
          <div class="date"><%= article.updated_at.strftime("%d %B") %></div>
          <p><%= ensure_default article.title %></p>
        </div>
      <% end %>
    <% end %>

  </div>
</div>


